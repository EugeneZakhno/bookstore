<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog">

    <changeSet author="ezohno" id="COURSES-005-book-createTable">
        <createTable tableName="book">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKeyName="pk_REGISTER_PROFILE" primaryKey="true" nullable="false"/>
            </column>
            <column name="isbn" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
            <column name="author" type="varchar(255)"/>
            <column name="page_number" type="integer"/>
            <column name="weight" type="double precision"/>
            <column name="price" type="double precision"/>
        </createTable>
    </changeSet>
    <changeSet author="ezohno" id="COURSES-006_add_new_column_currency">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <columnExists columnName="currency" tableName="book"/>
                </not>
            </and>
        </preConditions>
        <addColumn tableName="book">
            <column name="currency" type="varchar(50)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>